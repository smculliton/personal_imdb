<%= form_with url: "/directors/#{@director.id}/movies/create", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :release_year, "Release Year" %>
  <%= form.text_field :release_year %>
  <%= form.label :mpaa_rating, "MPAA Rating" %>
  <%= form.text_field :mpaa_rating %>
  <%= form.label :run_time, "Run Time" %>
  <%= form.text_field :run_time %>
  <%= form.label :rotten_tomatoes_score, "Rotten Tomatoes Score" %>
  <%= form.text_field :rotten_tomatoes_score %>
  <%= form.label :oscar_winner, "Oscar Winner?" %>
  <%= form.hidden_field :oscar_winner, value: false %>
  <%= form.check_box :oscar_winner, {}, true %>
  <%= form.submit "Create Movie" %>
<% end %>