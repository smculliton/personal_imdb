<h1> Director Index </h1>
<%= form_with url: '/directors', method: :get, local: true do |form| %>
  <%= form.label :search %>
  <%= form.text_field :search %>

  <%= form.label :exact_match, "Exact Matches Only" %>
  <%= form.check_box :exact_match %>

  <%= form.submit 'Search Directors' %>
<% end %>

<% @directors.each do |director| %>
<p><a href="/directors/<%= director.id %>"><%= director.name %></a> - created: <%= director.created_at %><p>
<%= button_to 'Edit', "/directors/#{director.id}/edit", method: :get %><br/>
<%= button_to 'Delete', "/directors/#{director.id}", method: :delete %><br/>
<% end %>
<br/>
<h4><%= link_to 'New Director', '/directors/new' %></h4>
<h4><%= link_to 'Sort Directors by Movie Count', '/directors/sort' %></h4>