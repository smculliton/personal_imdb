<%= form_with url: '/directors', method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :birth_year, "Birth Year" %>
  <%= form.text_field :birth_year %>
  <%= form.label :birth_place, "Birth Place" %>
  <%= form.text_field :birth_place %>
  <%= form.label :still_active, "Still Active?" %>
  <%= form.check_box :still_active %>
  <%= form.submit 'Create Director' %>
<% end %>