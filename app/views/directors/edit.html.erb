<%= form_with url: "/directors/#{@director.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, value: "#{@director.name}" %>
  <%= form.label :birth_year, "Birth Year" %>
  <%= form.text_field :birth_year, value: "#{@director.birth_year}"%>
  <%= form.label :birth_place, "Birth Place" %>
  <%= form.text_field :birth_place, value: "#{@director.birth_place}" %>
  <%= form.label :still_active, "Still Active?" %>
  <%= form.text_field :still_active, value: "#{@director.still_active}" %>
  <%= form.submit 'Update Director' %>
<% end %>