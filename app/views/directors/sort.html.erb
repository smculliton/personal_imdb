<h1> Director Index </h1>

<% @directors.each do |director| %>
<p><a href="/directors/<%= director.id %>"><%= director.name %></a> - Movies: <%= director.movie_count %> - created: <%= director.created_at %><p>
<%= button_to 'Edit', "/directors/#{director.id}/edit", method: :get %><br/>
<%= button_to 'Delete', "/directors/#{director.id}", method: :delete %><br/>
<% end %>
<br/>
<h4><%= link_to 'New Director', '/directors/new' %></h4>
<h4><%= link_to 'Sort Directors by Movie Count', '/directors/sort/count' %></h4>